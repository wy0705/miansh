<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.lmxdawn.him.api.dao.group.GroupDao">

    <select id="findByGroupId" parameterType="long" resultType="com.lmxdawn.him.common.entity.group.Group">
        SELECT group_id,uid,`name`,member_num,remark,create_time
        FROM `group`
        where group_id=#{groupId}
        limit 1
    </select>

    <select id="listByGroupIdIn" resultType="com.lmxdawn.him.common.entity.group.Group">
        SELECT group_id,uid,`name`,avatar,member_num,remark,create_time,modified_time
        FROM `group`
        where group_id in
        <foreach collection="list" item="id" index="index" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

    <insert id="insertGroup" keyProperty="groupId" parameterType="com.lmxdawn.him.common.entity.group.Group">
        INSERT INTO `group`(uid,`name`,avatar,member_num,remark,create_time,modified_time)
        VALUES
        (#{uid},
        #{name},
        #{avatar},
        #{memberNum},
        #{remark},
        #{createTime},
        #{modifiedTime})
    </insert>

    <update id="updateGroup" parameterType="com.lmxdawn.him.common.entity.group.Group">
        UPDATE `group`
        <set>
            <if test="uid != null">`uid`=#{uid},</if>
            <if test="name != null">`name`=#{name},</if>
            <if test="memberNum != null">`member_num`= member_num + #{memberNum},</if>
            <if test="remark != null">`remark`=#{remark},</if>
            modified_time=#{modifiedTime}
        </set>
        WHERE group_id=#{groupId}
    </update>

    <update id="decMemberNumByGroupId">
        UPDATE `group`
        <set>
            `member_num`= member_num - 1
        </set>
        WHERE group_id=#{groupId} AND member_num > 0
    </update>

    <update id="incMemberNumByGroupId">
        UPDATE `group`
        <set>
            `member_num`= member_num + #{memberNum}
        </set>
        WHERE group_id=#{groupId}
    </update>

    <delete id="deleteByGroupId" parameterType="long">
        delete from `group` where group_id=#{groupId}
    </delete>

</mapper>