<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.lmxdawn.him.api.dao.group.GroupUserDao">

    <select id="findByGroupIdAndUid" resultType="com.lmxdawn.him.common.entity.group.GroupUser">
        select id,`rank`,create_time
        from `group_user`
        where group_id = #{groupId} and uid = #{uid}
        limit 1
    </select>

    <select id="listByGroupId" resultType="com.lmxdawn.him.common.entity.group.GroupUser">
        select id,group_id,uid,remark,`rank`
        from `group_user`
        where group_id = #{groupId}
        limit #{offset},#{limit}
    </select>

    <select id="listByUid" resultType="com.lmxdawn.him.common.entity.group.GroupUser">
        select id,group_id,uid,last_ack_msg_id,last_msg_content,un_msg_count,`rank`,last_msg_time
        from `group_user`
        where uid = #{uid}
        limit #{offset},#{limit}
    </select>

    <insert id="insertGroupUser" keyProperty="id" parameterType="com.lmxdawn.him.common.entity.group.GroupUser">
        insert into `group_user`(group_id,uid,remark,`rank`,create_time,modified_time)
        values
        (#{groupId},
        #{uid},
        #{remark},
        #{rank},
        #{createTime},
        #{modifiedTime})
        ON DUPLICATE KEY UPDATE modified_time = VALUES(modified_time)
    </insert>

    <update id="updateGroupUserByGroupIdAndUid" parameterType="com.lmxdawn.him.common.entity.group.GroupUser">
        update `group_user`
        <set>
            `remark`=#{remark},
            <if test="rank != null">`rank`=#{rank},</if>
            modified_time=#{modifiedTime}
        </set>
        where group_id = #{groupId} and uid = #{uid}
    </update>

    <update id="clearUnMsgCountByGroupIdAndUid" parameterType="com.lmxdawn.him.common.entity.group.GroupUser">
        update `group_user`
        <set>
            `un_msg_count`=0,
            modified_time=#{modifiedTime}
        </set>
        where group_id = #{groupId} and uid = #{uid}
    </update>

    <update id="updateGroupUserByGroupId" parameterType="com.lmxdawn.him.common.entity.group.GroupUser">
        update `group_user`
        <set>
            <if test="lastAckMsgId != null">`last_ack_msg_id`=#{lastAckMsgId},</if>
            <if test="lastMsgContent != null">`last_msg_content`=#{lastMsgContent},</if>
            <if test="lastMsgTime != null">`last_msg_time`=#{lastMsgTime},</if>
            <if test="unMsgCount != null">`un_msg_count`= un_msg_count + #{unMsgCount},</if>
            modified_time=#{modifiedTime}
        </set>
        where group_id = #{groupId}
    </update>

    <delete id="deleteByGroupIdAndUid">
        delete from `group_user` where group_id = #{groupId} and uid = #{uid} and `rank` != 2
    </delete>

    <delete id="deleteByGroupId">
        delete from `group_user` where group_id = #{groupId}
    </delete>

</mapper>